<form stylesheet="application.css">
  <label>Email Message Tracking</label>
  <description>Tracking Email Security events</description>
  <fieldset>
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="f_from" searchWhenChanged="true">
      <label>Sender Address or Username</label>
      <default>*</default>
    </input>
    <input type="text" token="f_to" searchWhenChanged="true">
      <label>Recipient Address or Username</label>
      <default>*</default>
    </input>
    <input type="dropdown" token="f_direction" searchWhenChanged="true">
      <label>Direction</label>
      <default>*</default>
      <choice value="*">All</choice>
      <choice value="inbound">Inbound</choice>
      <choice value="outbound">Outbound</choice>
    </input>
    <!--<input type="dropdown" token="f_action" searchWhenChanged="true">
      <label>Action</label>
      <default>*</default>
      <choice value="*">All</choice>
    </input>-->
    <input type="text" token="f_mta" searchWhenChanged="true">
      <label>MTA Address or Hostname</label>
      <default>*</default>
    </input>
    <input type="dropdown" token="f_listener" searchWhenChanged="true">
      <label>Interface or Listener Name</label>
      <default>*</default>
      <choice value="*">All</choice>
      <populatingSearch fieldForValue="recv_int_name" fieldForLabel="recv_int_name">
        <![CDATA[eventtype=cisco_esa | stats count by recv_int_name]]>
      </populatingSearch>
    </input>    
    <input type="dropdown" token="f_host" searchWhenChanged="true">
      <label>Host</label>
      <default>*</default>
      <choice value="*">All</choice>
      <populatingSearch fieldForValue="host" fieldForLabel="host">
        <![CDATA[eventtype=cisco_esa | stats count by host]]>
      </populatingSearch>
    </input>
    <input type="dropdown" token="n" searchWhenChanged="true">
      <label>Number of Raw Events:</label>
      <default>100</default>
      <choice value="0">All</choice>
      <choice value="10">10</choice>
      <choice value="100">100</choice>
      <choice value="1000">1000</choice>
      <choice value="10000">10000</choice>
    </input>
  </fieldset>

    <searchTemplate>sourcetype="cisco_esa"  | transaction keepevicted=true icid mid | search host=$f_host$ src_host=$f_mta$ mailfrom=$f_from$ recv_int_name=$f_listener$ policy_direction=$f_direction$ | stats count by mailfrom mailto subject spam_verdict vof_verdict av_verdict quarantine_reason src_host sender_reputation policy_direction</searchTemplate>

  
  <row>
    <chart>
      <title>Timechart of Results</title>
      <searchPostProcess>timechart count(_raw)</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.text"># of Messages</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisEnd</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
    
  <row>
    <!-- show results as a table -->
    <table>
      <title>Email Tracking Results</title>
      <searchPostProcess>head limit=$n$ | eval threat_reason=coalesce( case(spam_verdict="positive","spam", vof_verdict="positive", "outbreak", av_verdict="positive","viral",quarantine_reason!="","quarantined"), "clean") | table _time, mailfrom mailto subject threat_reason src_host sender_reputation policy_direction | sort -_time</searchPostProcess>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="drilldown">row</option>
      <option name="count">50</option>
    </table>
  </row>  
</form>
