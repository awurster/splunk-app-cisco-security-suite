<form stylesheet="application.css">
  <label>Client Transactions</label>
  <description>Track Web Security transactions</description>
  <fieldset autoRun="true" submitButton="false">
    <input type="text" token="user_id">
      <label>Enter a User ID</label>
      <default>*</default>
      <description>Use an IP Address for unauthenticated sessions</description>
    </input>
    <input type="dropdown" token="num_events" searchWhenChanged="true">
      <label>Number of Raw Events:</label>
      <default>100</default>
      <choice value="0">All</choice>
      <choice value="10">10</choice>
      <choice value="100">100</choice>
      <choice value="1000">1000</choice>
      <choice value="10000">10000</choice>
    </input>    
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  <row>
    <chart>
      <title>Timechart of Results</title>
      <searchString>sourcetype=cisco_wsa_* | `fill-user-id` | search cs_username=$user_id$ | timechart count by action</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.chart">column</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Raw Events: Host $addr$ and Sourcetype $sourcetype$</title>
      <searchString>sourcetype=cisco_wsa_* | `fill-user-id` | search cs_username=$user_id$ | `resize-bytes(bytes_in,bytes_in)` | table _time, cs_username, dest_domain, action, cause, sum(bytes_in), host | head limit=$num_events$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="drilldown">cell</option>
      <option name="count">0</option>
      <option name="rowNumbers">false</option>
    </table>
  </row>
</form>
