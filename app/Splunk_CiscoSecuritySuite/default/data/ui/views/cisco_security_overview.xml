<form stylesheet="application.css">
  <label>Cisco Security Overview</label>
  <description>your dashboard for all things Cisco... Security.</description>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m@m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  <searchTemplate>(sourcetype=cisco* OR sourcetype=eStreamer) | fillnull value=- product eventtype threat_reason src_port dest_port src_ip dest_ip | eval product=if(sourcetype="eStreamer","SFIRE",product) | eval host=if(sourcetype="eStreamer",sensor,host) | eval eventtype=if(sourcetype="eStreamer","sourcefire",eventtype) | eval threat_reason=coalesce(rec_type_simple,sig_type,threat_reason) | eval threat_reason=if((action="error" AND http_result="TCP_DENIED/407"),"auth failure",threat_reason) | search threat_reason!="-" | eval threat_reason="[".product."] ".threat_reason | eval dest_port=coalesce(dest_port,target_port) | eval src_port=coalesce(src_port,attacker_port) | stats count by host product eventtype sourcetype threat_reason src_ip src_port dest_ip dest_port _time</searchTemplate>
  <row>
    <map>
      <title>Global Security Events</title>
      <!-- use 'src_ip!="10.0.0.0/8" src_ip!="172.12.0.0/12" src_ip!="192.168.0.0/16" src_ip!="0.0.0.0/32' to filter out local IP events -->
      <searchString>(sourcetype=cisco* OR sourcetype=eStreamer) src_ip!="10.0.0.0/8" src_ip!="172.12.0.0/12" src_ip!="192.168.0.0/16" src_ip!="0.0.0.0/32" | iplocation src_ip | geostats latfield=lat longfield=lon count by Country</searchString>
      <!--<searchName>Global Security Events</searchName>-->
      <!-- use named search for now because postprocess doesnt seem to like the maps :/ . -->
      <!--<searchPostProcess>search src_ip!="10.0.0.0/8" src_ip!="172.12.0.0/12" src_ip!="192.168.0.0/16" src_ip!="0.0.0.0/32" | iplocation src | geostats latfield=lat longfield=lon count by product</searchPostProcess>-->
      <!-- use custom colors -->
      <!--<option name="mapping.seriesColors">[0x9C4B4B,0xD76034,0xAFAE2E,0x4C674F,0x9E7395]</option>-->
      <!-- adjust marker opacity and size range -->
      <option name="mapping.markerLayer.markerOpacity">0.8</option>
      <option name="mapping.markerLayer.markerMinSize">15</option>
      <option name="mapping.markerLayer.markerMaxSize">50</option>
      <!-- set initial map center and zoom level -->
      <option name="mapping.map.center">(14.5833, 120.9667)</option>
      <option name="mapping.map.zoom">2</option>
    </map>
    <chart>
      <title>Top Threat Reason</title>
      <!--<searchString>(sourcetype=cisco* OR sourcetype=eStreamer) | eval product=if(sourcetype="eStreamer","SFIRE",product) | eval threat_reason=coalesce(rec_type_simple,sig_type,threat_reason) | eval threat_reason=if((action="error" AND http_result="TCP_DENIED/407"),"auth failure",threat_reason) | search threat_reason!="-" | eval threat_reason="[".product."] ".threat_reason | top limit=10 threat_reason</searchString>-->
      <searchPostProcess>top limit=10 threat_reason</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <!-- use a separate search for now because some sources don't have threat reason yet -->
      <!--<searchPostProcess>top limit=10 threat_reason</searchPostProcess>-->
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="height">400</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <chart>
      <title>Top Sources</title>
      <!--<searchString>sourcetype=cisco* | eval src=coalesce(src_ip,src_host) | eval dest=coalesce(dest_ip,dest_host) | top limit=10 src</searchString>-->
      <searchPostProcess>top limit=10 src_ip</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">log</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">connect</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <chart>
      <title>Top Destinations</title>
      <!--<searchString>sourcetype=cisco* | eval src=coalesce(src_ip,src_host) | eval dest=coalesce(dest_ip,dest_host) | top limit=10 dest</searchString>-->
      <searchPostProcess>top limit=10 dest_ip</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <chart>
      <title>Top Services</title>
      <!--<searchString>sourcetype=cisco* | eval port=coalesce(dest_port,src_port) | lookup services port OUTPUT service | eval service=coalesce(service,"unknown") | top service limit=10</searchString>-->
      <searchPostProcess>eval port=coalesce(dest_port,src_port) | lookup services port OUTPUT service | top service limit=10</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Security Event Stats by Sourcetype</title>
      <!--<searchString>sourcetype=cisco* | chart count sparkline(count) as "trending" by sourcetype | sort -count</searchString>-->
      <searchPostProcess>chart count sparkline(count) as "trending" by sourcetype | sort -count</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <!-- Set span for each sparkline datapoint to be 1 hour -->
      <option name="wrap">true</option>
      <option name="rowNumbers">true</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="drilldown">cell</option>
      <option name="count">10</option>
      <!-- Set sparkline options here; make sure that field matches field name of the search results -->
      <format type="sparkline" field="trend">
        <option name="type">bar</option>
        <option name="height">40px</option>
        <!-- Use colorMap to map specific values to selected colors -->
        <option name="colorMap">
          <option name="2000:">#5379AF</option>
          <option name=":1999">#9ac23c</option>
        </option>
        <option name="barWidth">5px</option>
      </format>
    </table>
    <table>
      <title>Security Event Stats by Host</title>
      <!--<searchString>stats count by host, product, eventtype | sort -count</searchString>-->
      <searchPostProcess>stats count by host, product, eventtype | sort -count</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <chart>
      <title>Security Events Statistcs</title>
      <!-- <searchString>sourcetype=cisco* | timechart useother=true usenull=f limit=4 count by product | sort -count</searchString>-->
      <searchPostProcess>timechart useother=true usenull=f count by product | sort -count</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.axisTitleX.visibility">collapsed</option>
      <option name="charting.axisTitleY.visibility">collapsed</option>
      <option name="charting.axisLabelsX.visibility">hide</option>
      <option name="charting.axisLabelsY.visibility">show</option>
      <option name="charting.axisLabelsX.majorLabelVisibility">show</option>
      <option name="charting.axisLabelsY.majorLabelVisibility">show</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">log</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">connect</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="height">400</option>
      <option name="charting.height">400</option>
      <option name="charting.layout.splitSeries">1</option>
      <option name="charting.layout.splitSeriesMargin">(4,4,4,8)</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisEnd</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
</form>